<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>
        <record id="sale_order_form_inherit_cash" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.cash</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group" position="inside">
                     <group>
                        <field name="cash"  invisible = "not cash_enabled" />                     
                      </group>                     
                </xpath>
            </field>
        </record>
    </data>
</odoo>
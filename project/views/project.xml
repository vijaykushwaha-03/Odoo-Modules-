<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="demo_projects_list" model="ir.ui.view">
        <field name="name">demo.projects.list</field>
        <field name="model">demo.project</field>        
        <field name="arch" type="xml">
            <list string="Projects">
                 <field name="name"/> 
                 <field name="progress"/>
                 <field name="status"/>    
                 <field name="last_update_task"/>    
            </list>
        </field>
    </record>  

    <record id="view_demo_projects_form" model="ir.ui.view">
        <field name="name">demo.projects.form</field>
        <field name="model">demo.project</field>
        <field name="arch" type="xml">
            <form string="Project Form" class="o_sale_order">
                <sheet>
                    <group name="demo_project">
                        <field name="name"/>
                        <field name="progress"/>
                        <field name="status"/>
                        <field name="last_update_task"/>
                    </group>          
                    <notebook>
                        <page name="tab" string="Tabs">   
                        <group>
                            
                        </group>  
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_projects_demo" model="ir.actions.act_window">
        <field name="name">Project</field>
        <field name="res_model">demo.project</field>        
        <field name="view_mode">list,form</field>        
    </record>  
</odoo>

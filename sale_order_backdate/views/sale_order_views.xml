<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_sale_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/> 
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="remark" invisible="not enable_remark_saleorder" required="remark_saleorder == True"/>
            </xpath> 
        </field>
    </record>

    <record id="model_sale_order_mass_assign" model="ir.actions.server">
        <field name="name">Mass Assign Backdate</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="groups_id" eval="[(4, ref('wt_sale_order_backdate.group_mass_assign_backdate'))]"/>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="state">code</field>
        <field name="code">
        if records:
            action = records.action_open_backdate_wizard()
        </field>
    </record>
</odoo>
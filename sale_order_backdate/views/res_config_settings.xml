<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_config_settings_sales" model="ir.ui.view">
        <field name="name">res.config.settings.sales</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='connectors_setting_container']" position="after">
                <block title="Sale Backdate Settings" id="custom_backdate">
                    <setting id="enable_backdate_for_saleorder">
                        <field name="enable_backdate_saleorder"/>
                    </setting>
                    <setting id="enable_remark_for_saleorder">
                        <field name="enable_remark_saleorder"/>
                        <div invisible='not enable_remark_saleorder'>
                            <setting id="remark_mandatory_for_saleorder">
                                <field name="remark_saleorder"/>
                            </setting>
                        </div>
                    </setting>
                     
                    <setting id="invoice_has_same_backdate">
                        <field name="invoice_backdate"/>
                    </setting>
                    <setting id="delivery_has_same_backdate">
                        <field name="delivery_backdate"/>
                    </setting>
                </block>
            
            </xpath>
        </field>
    </record>
</odoo>
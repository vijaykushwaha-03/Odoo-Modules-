<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_task" model="ir.actions.act_window">
            <field name="name">Task</field>
            <field name="res_model">wise.task</field>        
            <field name="view_mode">list,form</field>        
    </record>  

    <record id="wise_projects_list_b" model="ir.ui.view">
        <field name="name">wise.projects.list</field>
        <field name="model">wise.task</field>        
        <field name="arch" type="xml">
            <list string="Projects_b">
                 <field name="name"/>
                 <field name="project"/>
                 <field name="progress"/>
                 <field name="status"/>              
            </list>
        </field>
    </record>

    <record id="view_wise_projects_form" model="ir.ui.view">
        <field name="name">wise.projects.form</field>
        <field name="model">wise.task</field>
        <field name="arch" type="xml">
            <form string="Project Form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="project"/>
                        <field name="progress"/>
                        <field name="status"/> 
                    </group>  
                    <notebook>
                        <page string="Tasks">
                            <group>
                                
                            </group>
                        </page>
                    </notebook>                  
                </sheet>
            </form>
        </field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_manage_chatter_menu" model="ir.actions.act_window">
        <field name="name">Manage Chatter</field>
        <field name="res_model">manage.chatter</field>        
        <field name="view_mode">list,form</field>        
    </record>  

    <record id="manage_chatter_list" model="ir.ui.view">
        <field name="name">manage.chatter.list</field>
        <field name="model">manage.chatter</field>        
        <field name="arch" type="xml">
            <list string="Manage Chatter">
                 <field name="name"/>
                 <field name="active"/>
                 <field name="model_ids" widget="many2many_tags"/>
                 <field name="disable_to_add_followers" widget="many2many_tags"/>
                 <field name="users" widget="many2many_tags_avatar"/>
            </list>
        </field>
    </record>  

    <record id="view_manage_chatter_form" model="ir.ui.view">
        <field name="name">manage.chatter.form</field>
        <field name="model">manage.chatter</field>
        <field name="arch" type="xml">
            <form string="Chatter Form">
                <sheet>
                    <group name="manage_chatter">
                        <field name="name"/>
                        <field name="active"/>
                        <field name="model_ids" widget="many2many_tags"/>
                        <field name="disable_to_add_followers" widget="many2many_tags"/>
                        <field name="users" widget="many2many_tags_avatar"/>
                    </group>          
                </sheet>
            </form>
        </field>
    </record>
</odoo>

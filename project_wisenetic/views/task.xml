<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <!-- List View -->

    <record id="view_task_Odoo custom_list" model="ir.ui.view">
        <field name="name">view.task.Odoo custom</field>
        <field name="model">Odoo custom.task</field>
        <field name="arch" type="xml">
        <list>
            <field name="name"></field>
            <field name="progress"></field>
            <field name="status"></field>
            <field name="project_id"></field>
        </list>
        </field>
    </record>

         <!-- Form View -->
    
    <record id="view_task_Odoo custom_form" model="ir.ui.view">
        <field name="name">view.task.Odoo custom</field>
        <field name="model">Odoo custom.task</field>
        <field name="arch" type="xml">
            <form string="task_form">
                <sheet>
                    <group>
                        <field name="name"></field>
                        <field name="progress"></field>
                        <field name="status" ></field>
                        <field name="project_id"></field>
                     </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_task_Odoo custom" model="ir.actions.act_window">
        <field name="name">Task</field>
        <field name="res_model">Odoo custom.task</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>

<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
         <!--Inherit
        product.template.tree.view to add field and attribute-->
        <record id="product_template_tree_view_inherit_wt_low_stock_notification" model="ir.ui.view">
            <field name="name">
                product.template.tree.view.inherit.wt.low.stock.notification
            </field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='qty_available']" position="after">
                    <field name="alert_state" column_invisible="True" />
                </xpath>
                <list position="attributes">
                    <attribute name="decoration-danger">alert_state == True
                    </attribute>
                </list>
            </field>
        </record>

        <!--Inherit
        product.template.kanban.view to add fields and attributes-->
        <record id="product_template_kanban_view_inherit_wt_low_stock_notification"
            model="ir.ui.view">
            <field name="name">
                product.template.kanban.view.inherit.wt.low.stocknotification
            </field>
            <field name="inherit_id" ref="product.product_template_kanban_view" />
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <xpath expr="//kanban" position="inside">
                    <field name="alert_state" />
                    <field name="color_field" />
                </xpath>
                <xpath expr="//t[@t-name='card']" position="replace">
                    <t t-name="card" class="flex-row">
                        <div class="o_kanban_record border-0 d-flex w-100 h-100 align-items-stretch"
                            t-att-style="'background-color:' + record.color_field.raw_value + ';'">
                            <div class="d-flex w-100 p-2">
                                <main class="pe-2 flex-grow-1">
                                    <div class="mb-1">
                                        <div class="d-flex mb-0 h5">
                                            <field class="me-1" name="is_favorite"
                                                widget="boolean_favorite" nolabel="1" />
                                            <field name="name" />
                                        </div>
                                        <span t-if="record.default_code.value"> [<field
                                                name="default_code" />] </span>
                                        <strong t-if="record.product_variant_count.value &gt; 1">
                                            <field name="product_variant_count" /> Variants </strong>
                                    </div>
                                    <span> Price: <field name="list_price" widget="monetary"
                                            options="{'currency_field': 'currency_id', 'field_digits': True}" />
                                    </span>
                                    <field name="product_properties" widget="properties" />
                                </main>
                                <aside class="d-flex align-items-center justify-content-center">
                                    <field name="image_128" widget="image" alt="Product"
                                        options="{'img_class': 'w-100 h-auto'}" />
                                </aside>
                            </div>
                        </div>
                    </t>
                </xpath>
            </field>
        </record>
    </data>
    
</odoo>
<odoo>
    <record id="res_config_settings_view_form_inherit_wt_low_stock_notification" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.wt.low.stock.notification</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//block[@name='product_setting_container']" position="inside">
                <setting id="low_stock_notification" title="Enable Low Stock Notifications">
                    <field name="low_stock_notification_enabled" />
                    <div class="row mt16" invisible="not low_stock_notification_enabled">
                        <label for="quantity_type" class="col-lg-4 o_light_label"/>
                        <field name="quantity_type" class="oe_inline" required="low_stock_notification_enabled"/>
                    </div>
                    <div class="row mt16" invisible="not low_stock_notification_enabled">
                        <label for="product_quantity_check" class="col-lg-4 o_light_label"/>
                        <field name="product_quantity_check" class="oe_inline" required="low_stock_notification_enabled"/>
                    </div>
                    <div class="row mt16" invisible="product_quantity_check != 'global' or not low_stock_notification_enabled">
                        <label for="minimum_quantity" class="col-lg-4 o_light_label"/>
                        <field name="minimum_quantity" class="oe_inline" required="low_stock_notification_enabled"/>
                    </div>
                    <div class="row mt16" invisible="not group_product_variant or not low_stock_notification_enabled">
                        <field name="is_apply_on_variant" class="oe_inline" />
                        <div class="col ps-0">
                            <label for="is_apply_on_variant"/>
                        </div>
                    </div>
                    <br/>
                    <button invisible="not low_stock_notification_enabled" name="action_open_email_template" icon="oi-arrow-right" type="object" string="Manage Recipients" class="btn-link"/>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
 
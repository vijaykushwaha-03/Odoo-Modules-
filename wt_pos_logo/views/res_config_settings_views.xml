<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.point_of_sale</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='is_order_shared']" position="after">
                <setting id="pos_logo" help="POS Logo">
                    <field name="enable_pos_logo"/>
                    <div class="logo_option" invisible="not enable_pos_logo">
                        <field name="logo_option" class="o_light_label" widget="radio" options="{'horizontal': true}"/>
                        <div class="option-custom" invisible="logo_option != 'custom'">
                            <field name="custom_logo" class="w-25" widget='image'/>
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>

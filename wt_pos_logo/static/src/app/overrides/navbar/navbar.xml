<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-inherit="point_of_sale.Navbar" t-inherit-mode="extension">
        <xpath expr="//img[hasclass('pos-logo')]" position="replace">
            <t t-if="pos.config.enable_pos_logo">
                <img height="42" class="pos-logo pos-logo mw-100" t-att-src="'/web/binary/pos_logo'" alt="Logo"/>           
            </t>
            <t t-else="">
                <img class="pos-logo pos-logo mw-100" height="42" t-on-click="() => debug.toggleWidget()" src="/web/static/img/logo.png" alt="Logo" />
            </t>
        </xpath>
    </t>
</templates>

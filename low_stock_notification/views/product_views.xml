<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="product_template_form_view_inherit_wt_low_stock_notification" model="ir.ui.view">
            <field name="name">product.template.form.view.inherit.wt.low.stock.notification</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//group/field[@name='categ_id']" position="after">
                    <field name="minimum_quantity"/>
                </xpath>
            </field>
        </record>

        <record id="product_product_tree_view_inherit_wt_low_stock_notification" model="ir.ui.view">
            <field name="name">
                product.product.tree.view.inherit.wt.low.stock.notification
            </field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view" />
            <field name="arch" type="xml">
                <xpath expr="//list" position="attributes">
                    <attribute name="decoration-warning">is_low_stock
                    </attribute>
                </xpath>
            </field>
        </record>

        <record id="product_kanban_view_inherit_wt_low_stock_notification" model="ir.ui.view">
            <field name="name">product.kanban.view.inherit.wt.low.stocknotification</field>
            <field name="inherit_id" ref="product.product_kanban_view" />
            <field name="model">product.product</field>
            <field name="arch" type="xml">
                <xpath expr="//kanban" position="attributes">
                    <attribute name="highlight_color">highlight_color</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>

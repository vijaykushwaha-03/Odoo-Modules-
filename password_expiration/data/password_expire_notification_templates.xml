<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="email_template_password_expiration" model="mail.template">
            <field name="name">Password Expiration Alert</field>
            <field name="email_from">${(user.email)}</field>
            <field name="subject">Your password is about to expire</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="auto_delete" eval="True"/>
            <field name="email_to">${object.email}</field>
            <field name="body_html">
                  <![CDATA[
                <p>Hello ${object.name},</p>
                <p>Your password is about to expire. Please update it to continue accessing your account securely.</p>
                <p>Thanks!</p>
            ]]>
            </field>
    </record>  
    </data>
</odoo>
